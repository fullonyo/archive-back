# ===============================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ===============================================
# Configurações individuais do banco MySQL
DB_HOST=seu-mysql-host.hostinger.com
DB_PORT=3306
DB_USER=seu-usuario
DB_PASSWORD=sua-senha
DB_NAME=nome-do-banco

# URL completa do banco (formato Prisma)
DATABASE_URL="mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}"

# ===============================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO
# ===============================================
JWT_SECRET=seu-jwt-secret-super-seguro-aqui
JWT_REFRESH_SECRET=seu-refresh-secret-super-seguro-aqui

# ===============================================
# CONFIGURAÇÕES REDIS (Docker)
# ===============================================
# Para desenvolvimento com Docker (será automaticamente configurado)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=vrchieve123

# Para produção ou Redis externo, use:
# REDIS_URL=redis://seu-redis-host:6379
# REDIS_PASSWORD=sua-senha-redis

# ===============================================
# CONFIGURAÇÕES DE EMAIL
# ===============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app
SMTP_FROM=noreply@vrchieve.com

# ===============================================
# CONFIGURAÇÕES DE URLS
# ===============================================
# URL do Frontend (para links de confirmação)
FRONTEND_URL=http://localhost:5173
# URL do Backend (para desenvolvimento)
BACKEND_URL=http://localhost:3001

# ===============================================
# CONFIGURAÇÕES DO GOOGLE DRIVE E OAUTH
# ===============================================
# Google OAuth 2.0 para autenticação
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# Google Drive para storage (Opcional)
# GOOGLE_SERVICE_ACCOUNT_KEY=path/to/service-account.json
# GOOGLE_DRIVE_FOLDER_ID=seu-folder-id

# ===============================================
# CONFIGURAÇÕES DE ENVIRONMENT
# ===============================================
NODE_ENV=development
PORT=3001

# ===============================================
# CONFIGURAÇÕES DE CORS
# ===============================================
# Lista de origens permitidas (separadas por vírgula)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
